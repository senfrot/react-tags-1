{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "module": "esnext",
        "target": "ES5",
        "lib": ["ES6", "DOM", "ES2016", "ES2017"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
